  <!-- HighlightedPosts Widget ******* -->
  <EcHomeBlogSelected
  lang={"en"}
    title='Selected News'/>
  <BlogLatestPosts
    title="Latest News"
    information={`
                `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Where should I go for consultation services related to server mini-games and player account affairs?',
        description:
          `Enter our <a style="color:blue" href="https://uc.easecation.net" target="_blank" rel="noopener noreferrer">ticket system</a> and submit a ticket of the corresponding category according to the guidance.`,
