  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      {title: 'Registered Players', amount: '100 Million+'},
      {title: 'Peak Online Players', amount: '20,000+'},
      {title: 'Player Rating', amount: '4.8/5.0'},
    ]}
  />
  
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Guide',
        href: '/en/homeguidehowtojointhegame',
