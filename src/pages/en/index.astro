    <Fragment slot="title">
      <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Join the Server</span>
    </Fragment>

    <Fragment slot="subtitle">
      Mobile: Client - Online Games - EC Bed Wars·S8 <br class="hidden md:inline" />
      PC: Client - Online Games - EC Mini-Games·Bed Wars
    </Fragment>
  </CallToAction>
</Layout>
